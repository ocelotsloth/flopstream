extends layout

block content

    // Header
    div.page-header#banner
        div.row
            div.col-md-12
                h1
                    strong
                        span.fa.fa-stack.fa-lg
                            i.fa.fa-circle.fa-stack-2x
                            i.fa.fa-music.fa-stack-1x.fa-inverse
                        i.fa flopstream

    // Step 1
    div.col-md-8
        h3 Step 1: Upload your MIDI File.
        legend
        form(ref='uploadForm' id='uploadForm' action='/upload' method='post' encType="multipart/form-data")
            label.btn.btn-default.btn-file Browse
                input(type="file" style="display: none;")
            <br></br>
            | File:
            <br></br>
            label.btn.btn-default.btn-file Upload MIDI File!
                input(type="submit" style="display: none;")

    // Step 2
    div.col-md-8
        br
        h3 Step 2: Wait a bit while your request is processed.
        legend
        div.progress
            div(class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%")
                span.sr-only 70% Complete
        p waiting...
        br

    // Step 3
    div.col-md-8
        h3 Step 3: Get a link to the upload!
        legend
        button(type="button" class="btn btn-success") Click Here!
